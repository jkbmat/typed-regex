{
  "name": "typed-regex",
  "version": "0.0.6",
  "description": "A typescript library for writing type-safe regular expressions using named capture groups",
  "main": "dist/lib/index.js",
  "types": "dist/types/index.d.ts",
  "repository": "https://github.com/phenax/typed-regex",
  "author": "Akshay Nair <phenax5@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "regex",
    "type-safe",
    "typescript"
  ],
  "scripts": {
    "build": "tsc --module commonjs",
    "prepublish": "npm run build",
    "release": "release-it",
    "release:major": "yarn release -- -i major",
    "release:minor": "yarn release -- -i minor",
    "release:patch": "yarn release -- -i patch",
    "test": "jest",
    "test:ci": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "jest": "^27.0.4",
    "release-it": "^14.8.0",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "requireCommits": false,
      "commit": true,
      "commitMessage": "Release ${version}",
      "tag": true,
      "tagAnnotation": "Release ${version}",
      "push": true,
      "pushArgs": [
        "--follow-tags"
      ]
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/*.ts"
    ]
  }
}
